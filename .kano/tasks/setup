#!/bin/sh

. "$KANO_HELPERS/report"

setup_help() {
  echo "Install git hooks and build dev image"
}

setup() {
  _install_git_hooks
  _build_dev_image
}

_install_git_hooks() {
  report info "[setup] Installing git hooks"
  git config --local core.hooksPath "$KANO_PROJECT_DIRECTORY/hooks"
}

_build_dev_image() {
  report info "[setup] Building dev image"
  docker build --tag "kano:local" --cache-from "kano:local" .
}
