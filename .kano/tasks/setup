#!/bin/sh

. "$KANO_HELPERS/report"

setup_help() {
  echo "Install git hooks"
}

setup() {
  _install_git_hooks
  _build_docker_image
}

_install_git_hooks() {
  report info "[setup] Installing git hooks"
  GIT_DIRECTORY="$(git rev-parse --git-dir)"
  GIT_HOOK_DIRECTORY="$GIT_DIRECTORY/hooks"
  cp "$KANO_LOCAL_DIRECTORY"/git_hooks/* "$GIT_HOOK_DIRECTORY"
}

_build_docker_image() {
  docker build --tag "kano:dev" .
}

_build_docker_image() {
  docker build --tag "kano:dev" .
}

_build_docker_image() {
  docker build --tag "kano:dev" .
}

_build_docker_image() {
  docker build --tag "kano:dev" .
}
