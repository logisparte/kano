#!/bin/sh -e

. "$SHELL_HELPERS/find_this_directory"

kano() {
  KANO_UNIVERSAL_DIRECTORY="$(find_this_directory)"
  export KANO_UNIVERSAL_DIRECTORY
  export KANO_LOCAL_DIRECTORY="$PWD/.kano"
  export KANO_LOCAL_TASK_DIRECTORY="$KANO_LOCAL_DIRECTORY/tasks"
  export KANO_LOCAL_ENVIRONMENT_FILE="$KANO_LOCAL_DIRECTORY/environment"

  . "$SOURCE_DIRECTORY/router"
  router route "$@"
}

kano "$@"
